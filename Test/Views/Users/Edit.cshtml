@model AddUserViewModel

@{
    ViewData["Titel"] = "Edit Profile";
}



<div style="width:70%; margin:auto">
    <form asp-action="Edit" method="post">
        <div class="form-floating mb-3">
            <input asp-for="FirstName" class="form-control" maxlength="100" type="text" />
            <label asp-for="FirstName">FirstName</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="LastName" class="form-control" maxlength="100" type="text" />
            <label asp-for="LastName">LastName</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="UserName" class="form-control" maxlength="100" type="text" />
            <label asp-for="UserName">UserName</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary mt-4">Save</button>
    </form>
</div>







@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}