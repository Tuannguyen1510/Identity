@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>
<div style="width:70%; margin:auto; margin-top: 70px ">
    <a asp-action="Add" class="btn btn-danger"> Thêm Người dùng</a>

    <table class="table table-striped mt-4" style="color:black">
        <thead>
            <tr class="bg-succes text-blue">
                <th>First Name</th>
                <th>Last Name</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(" , ", user.Roles.ToList())</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Users" asp-action="Edit" asp-route-userId="@user.Id">Edit</a>
                        <a class="btn btn-success" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.Id">Manage Roles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



